<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardTextStyle">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/abhaya_libre_bold</item>
    </style>

    <style name="CategoriesTextStyle">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/abhaya_libre_semi_bold</item>
    </style>

    <style name="ProductTitleTextStyle">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/abhaya_libre_medium</item>
    </style>

    <style name="ProductTitleTextStyleExtraBold">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abhaya_libre_extra_bold</item>
    </style>

    <style name="ProductTitleTextStyleBold">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/abhaya_libre_bold</item>
    </style>

    <style name="ProductPriceTextStyle">
        <item name="android:textColor">@color/graphite_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abhaya_libre_semi_bold</item>
    </style>

    <style name="ProductPriceTextStyleExtraBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abhaya_libre_extra_bold</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abhaya_libre_bold</item>
    </style>




    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.BottomCornerRound" parent="">
        <item name="cornerSizeBottomRight">25dp </item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

</resources>